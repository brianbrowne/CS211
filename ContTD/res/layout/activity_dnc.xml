<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#5089D6"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DNC" >

    <RelativeLayout
            android:id="@+id/RelLayDNC"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
    
    

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Contact Your TD!" />
    <TextView
        android:id="@+id/filler"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_below="@+id/textview1" />
    
    
    
    <TextView
        android:id="@+id/textviewAodRio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filler"
        android:textSize="20sp"
        android:text="Aodhan O Riordain" />
    
    <EditText
        android:id="@+id/SubjectAodRio"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/textviewAodRio"
        android:hint="Please type the subject of the message"
        android:ems="10" />
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageViewRicBru"
        android:layout_marginTop="35sp"
        android:layout_toRightOf="@+id/SubjectAodRio"
        android:src="@drawable/aodhanoriordain" />
    
    <EditText
        android:id="@+id/messageAodRio"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/SubjectAodRio"
        android:hint="Please type your message"
        android:ems="10" />
    
    <TextView
        android:id="@+id/spacer196"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/messageAodRio" />
    
    <Button
        android:id="@+id/sendEmailAodRio"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer196"
        android:onClick="onClickSendEmail1"
        android:text="Send Email" />
    
    <TextView
        android:id="@+id/spacer197"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/sendEmailAodRio" />
    
    <Button
        android:id="@+id/AodRiowebsite"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer197"
        android:onClick="onClickSendEmailAodRio"
        android:text="Open Aodhan O Riordain's website" />
    
    
    
    
    
    
    <TextView
        android:id="@+id/textviewFinGra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dip"
        android:textSize="20sp"
        android:text="Finian McGrath" />
    
    <EditText
        android:id="@+id/SubjectFinGra"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/textviewFinGra"
        android:hint="Please type the subject of the message"
        android:ems="10" />
    
    <ImageView
        android:id="@+id/imageViewFinGra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dip"
        android:layout_toRightOf="@+id/SubjectFinGra"
        android:src="@drawable/finianmcgrath" />
    
    <EditText
        android:id="@+id/messageFinGra"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/SubjectFinGra"
        android:hint="Please type your message"
        android:ems="10" />
    
    <TextView
        android:id="@+id/spacer198"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/messageFinGra" />
    
    <Button
        android:id="@+id/sendEmailFinGra"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer198"
        android:text="Send Email" />
    
    <TextView
        android:id="@+id/spacer199"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/sendEmailFinGra" />
    
    <Button
        android:id="@+id/FinGrawebsite"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer199"
        android:text="Open Finian McGrath's website" />
    
    
    
    
    
    
    
    <TextView
        android:id="@+id/textviewRicBru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="680dip"
        android:textSize="20sp"
        android:text="Richard Bruton" />
    
    <EditText
        android:id="@+id/SubjectRicBru"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/textviewRicBru"
        android:hint="Please type the subject of the message"
        android:ems="10" />
    
    <ImageView
        android:id="@+id/imageViewRicBru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="690dip"
        android:layout_toRightOf="@+id/SubjectRicBru"
        android:src="@drawable/richardbruton" />
    
    <EditText
        android:id="@+id/messageRicBru"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/SubjectRicBru"
        android:hint="Please type your message"
        android:ems="10" />
    
    <TextView
        android:id="@+id/spacer200"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/messageRicBru" />
    
    <Button
        android:id="@+id/sendEmailRicBru"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer200"
        android:text="Send Email" />
    
    <TextView
        android:id="@+id/spacer201"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/sendEmailRicBru" />
    
    <Button
        android:id="@+id/RicBruwebsite"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer201"
        android:text="Open Richard Bruton's website" />
    
    </RelativeLayout>
</ScrollView>