<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#5089D6"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CavMon" >

    <RelativeLayout
            android:id="@+id/RelLayCavMon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
    
    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Contact Your TD!" />
    <TextView
        android:id="@+id/filler"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_below="@+id/textview1" />
    
    
    
    <TextView
        android:id="@+id/textviewHeaHum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filler"
        android:textSize="20sp"
        android:text="Heather Humphreys" />
    
    <EditText
        android:id="@+id/SubjectHeaHum"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/textviewHeaHum"
        android:hint="Please type the subject of the message"
        android:ems="10" />
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35sp"
        android:layout_toRightOf="@+id/SubjectHeaHum"
        android:src="@drawable/heatherhumphreys" />
    
    <EditText
        android:id="@+id/messageHeaHum"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/SubjectHeaHum"
        android:hint="Please type your message"
        android:ems="10" />
    
    <TextView
        android:id="@+id/spacer235"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/messageHeaHum" />
    
    <Button
        android:id="@+id/sendEmailHeaHum"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer235"
        android:onClick="onClickSendEmail1"
        android:text="Send Email" />
    
    <TextView
        android:id="@+id/spacer236"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/sendEmailHeaHum" />
    
    <Button
        android:id="@+id/HeatherHumphreyswebsite"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer236"
        android:onClick="onClickSendEmail1"
        android:text="Open Heather Humphreys's website" />
    
    
    
    
    
    
    
    
        <TextView
        android:id="@+id/textviewSeaCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dip"
        android:textSize="20sp"
        android:text="Sean Conlan" />
    
    <EditText
        android:id="@+id/SubjectSeaCon"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/textviewSeaCon"
        android:hint="Please type the subject of the message"
        android:ems="10" />
    
    <ImageView
        android:id="@+id/imageViewSeanConlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dip"
        android:layout_toRightOf="@+id/SubjectSeaCon"
        android:src="@drawable/seanconlan" />
    
    <EditText
        android:id="@+id/messageSeaCon"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/SubjectSeaCon"
        android:hint="Please type your message"
        android:ems="10" />
    
    <TextView
        android:id="@+id/spacer237"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/messageSeaCon" />
    
    <Button
        android:id="@+id/sendEmailSeaCon"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer237"
        android:onClick="onClickSendEmailSeanConlan"
        android:text="Send Email" />
    
    <TextView
        android:id="@+id/spacer238"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/sendEmailSeaCon" />
    
    <Button
        android:id="@+id/SeanConlanwebsite"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer238"
        android:onClick="onClickSendEmail1"
        android:text="Open Sean Conlan's website" />

    </RelativeLayout>
</ScrollView>