<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#5089D6"
    tools:context=".SlNL" >

    <RelativeLayout
            android:id="@+id/RelLayMeW"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
    
    

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Contact Your TD!" />
    <TextView
        android:id="@+id/filler"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_below="@+id/textview1" />
    
    
    
    <TextView
        android:id="@+id/textviewMicCol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filler"
        android:textSize="20sp"
        android:text="Michael Colreavy" />
    
    <EditText
        android:id="@+id/SubjectMicCol"
        
        android:layout_height="55dip"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_below="@+id/textviewMicCol"
        android:hint="Please type the subject of the message"
        android:ems="10" />
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45sp"
        android:layout_toRightOf="@+id/SubjectMicCol"
        android:src="@drawable/michaelcolreavy" />
    
    <EditText
        android:id="@+id/messageMicCol"
        
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/SubjectMicCol"
        android:hint="Please type your message"
        android:ems="10" />
    
    <TextView
        android:id="@+id/spacer70"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/messageMicCol" />
    
    <Button
        android:id="@+id/sendEmailMicCol"
        android:layout_width="285dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer70"
        android:background="#32cd32"
        android:onClick="onClickSendEmail1"
        android:text="Send Email" />
    
    <TextView
        android:id="@+id/spacer71"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/sendEmailMicCol" />
    
         <Button
        android:id="@+id/MicColwebsite"
        android:layout_width="285dip"
        android:layout_height="wrap_content"
        android:background="#32cd32"
        android:layout_below="@+id/spacer71"
        android:onClick="onClickSendEmailMicCol"
        android:text="Open Michael Colreavy's website" />

</RelativeLayout>
</ScrollView>