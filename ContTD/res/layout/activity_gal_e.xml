<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#5089D6"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GalE" >

 <RelativeLayout
            android:id="@+id/RelLayGalE"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
    
    

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Contact Your TD!" />
    <TextView
        android:id="@+id/filler"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_below="@+id/textview1" />
    
    
    
    <TextView
        android:id="@+id/textviewCiaCan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filler"
        android:textSize="20sp"
        android:text="Ciaran Cannon" />
    
    <EditText
        android:id="@+id/SubjectCiaCan"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/textviewCiaCan"
        android:hint="Please type the subject of the message"
        android:ems="10" />
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45sp"
        android:layout_toRightOf="@+id/SubjectCiaCan"
        android:src="@drawable/ciarancannon" />
    
    <EditText
        android:id="@+id/messageCiaCan"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/SubjectCiaCan"
        android:hint="Please type your message"
        android:ems="10" />
    
    <TextView
        android:id="@+id/spacer143"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/messageCiaCan" />
    
    <Button
        android:id="@+id/sendEmailCiaCan"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer143"
        android:onClick="onClickSendEmail1"
        android:text="Send Email" />
    
    <TextView
        android:id="@+id/spacer144"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/sendEmailCiaCan" />
    
    <Button
        android:id="@+id/CiaCanwebsite"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer144"
        android:onClick="onClickSendEmailCiaCan"
        android:text="Open Ciaran Cannon's website" />
    
    
    
    
    
    
    <TextView
        android:id="@+id/textviewColKea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dip"
        android:textSize="20sp"
        android:text="Colm Keaveney" />
    
    <EditText
        android:id="@+id/SubjectColKea"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/textviewColKea"
        android:hint="Please type the subject of the message"
        android:ems="10" />
    
    <ImageView
        android:id="@+id/imageViewColKea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dip"
        android:layout_toRightOf="@+id/SubjectColKea"
        android:src="@drawable/colmkeaveney" />
    
    <EditText
        android:id="@+id/messageColKea"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/SubjectColKea"
        android:hint="Please type your message"
        android:ems="10" />
    
    <TextView
        android:id="@+id/spacer145"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/messageColKea" />
    
    <Button
        android:id="@+id/sendEmailColKea"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer145"
        android:text="Send Email" />
    
    <!--  <Button
        android:id="@+id/ColKeawebsite"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendEmailColKea"
        android:text="Open Colm Keaveney's website" />-->
    
    
    
    
    
    
    <TextView
        android:id="@+id/textviewPauCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="680dip"
        android:textSize="20sp"
        android:text="Paul J Connaughton" />
    
    <EditText
        android:id="@+id/SubjectPauCon"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/textviewPauCon"
        android:hint="Please type the subject of the message"
        android:ems="10" />
    
    <ImageView
        android:id="@+id/imageViewPauCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="690dip"
        android:layout_toRightOf="@+id/SubjectPauCon"
        android:src="@drawable/pauljconnaughton" />
    
    <EditText
        android:id="@+id/messagePauCon"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/SubjectPauCon"
        android:hint="Please type your message"
        android:ems="10" />
    
    <TextView
        android:id="@+id/spacer146"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/messagePauCon" />
    
    <Button
        android:id="@+id/sendEmailPauCon"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer146"
        android:text="Send Email" />
    
    <TextView
        android:id="@+id/spacer147"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/sendEmailPauCon" />
    
    <Button
        android:id="@+id/PauConwebsite"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer147"
        android:text="Open Paul J Connaughton's website" />   

</RelativeLayout>
</ScrollView>
