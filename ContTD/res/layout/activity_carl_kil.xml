<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5089D6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CarlKil" >

    <RelativeLayout
            android:id="@+id/RelLay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
    
    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Contact Your TD!" />
    <TextView
        android:id="@+id/filler"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_below="@+id/textview1" />
    
    
    
    <TextView
        android:id="@+id/textviewPatrickDeering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filler"        
        android:textSize="20sp"
        android:text="Patrick Deering" />
    
    <EditText
        android:id="@+id/Subject1"
        android:layout_height="55dip"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_below="@+id/textviewPatrickDeering"
        android:hint="Please type the subject of the message"
        android:ems="10" />
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35sp"
        android:layout_toRightOf="@+id/Subject1"
        android:src="@drawable/patrickdeering" />
    
    <EditText
        android:id="@+id/message1"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/Subject1"
        android:hint="Please type your message"
        android:ems="10" />
    
    <TextView
        android:id="@+id/spacer54"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/message1" />
    
    <Button
        android:id="@+id/sendEmail1"
        android:layout_width="285dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer54"
        android:background="#32cd32"
        android:onClick="onClickSendEmail1"
        android:text="Send Email" />
    
    <TextView
        android:id="@+id/spacer50"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/sendEmail1" />
    
    <Button
        android:id="@+id/patrickDeeringwebsite"
        android:layout_width="285dip"
        android:layout_height="wrap_content"
        android:background="#32cd32"
        android:layout_below="@+id/spacer50"
        android:onClick="onClickSendEmail1"
        android:text="Open Partick Deering's website" />
    
    
    
    
    
    
    
    
        <TextView
        android:id="@+id/textviewPhilHogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dip"
        android:textSize="20sp"
        android:text="Phil Hogan" />
    
    <EditText
        android:id="@+id/SubjectPhilHogan"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/textviewPhilHogan"
        android:hint="Please type the subject of the message"
        android:ems="10" />
    
    <ImageView
        android:id="@+id/imageViewPhilHogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dip"
        android:layout_toRightOf="@+id/SubjectPhilHogan"
        android:src="@drawable/philhogan" />
    
    <EditText
        android:id="@+id/messagePhilHogan"
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/SubjectPhilHogan"
        android:hint="Please type your message"
        android:ems="10" />
    
    <TextView
        android:id="@+id/spacer52"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/messagePhilHogan" />
    
    <Button
        android:id="@+id/sendEmailPhilHogan"
        android:layout_width="285dip"
        android:layout_height="wrap_content"
        android:background="#32cd32"
        android:layout_below="@+id/spacer52"
        android:onClick="onClickSendEmailPhilHogan"
        android:text="Send Email" />
    
    <TextView
        android:id="@+id/spacer51"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/sendEmailPhilHogan" />
    
    <Button
        android:id="@+id/philhoganwebsite"
        android:layout_width="285dip"
        android:layout_height="wrap_content"
        android:background="#32cd32"
        android:layout_below="@+id/spacer51"
        android:onClick="onClickSendEmail1"
        android:text="Open Phil Hogan's website" />

    
    
    </RelativeLayout>
</ScrollView>
