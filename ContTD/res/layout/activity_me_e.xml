<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#5089D6"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MeE" >

    <RelativeLayout
            android:id="@+id/RelLayMeathEast"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
    
    

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Contact Your TD!" />
    <TextView
        android:id="@+id/filler"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_below="@+id/textview1" />
    
    
    
    <TextView
        android:id="@+id/textviewDomHan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filler"
        android:textSize="20sp"
        android:text="Dominic Hannigan" />
    
    <EditText
        android:id="@+id/SubjectDomHan"
        
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/textviewDomHan"
        android:hint="Please type the subject of the message"
        android:ems="10" />
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45sp"
        android:layout_toRightOf="@+id/SubjectDomHan"
        android:src="@drawable/dominichannigan" />
    
    <EditText
        android:id="@+id/messageDomHan"
        
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/SubjectDomHan"
        android:hint="Please type your message"
        android:ems="10" />
    
    <TextView
        android:id="@+id/spacer73"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/messageDomHan" />
    
    <Button
        android:id="@+id/sendEmailDomHan"
        android:layout_width="285dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer73"
        android:background="#32cd32"
        android:onClick="onClickSendEmail1"
        android:text="Send Email" />
    
    <TextView
        android:id="@+id/spacer74"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/sendEmailDomHan" />
    
         <Button
        android:id="@+id/DomHanwebsite"
        android:layout_width="285dip"
        android:layout_height="wrap_content"
        android:background="#32cd32"
        android:layout_below="@+id/spacer74"
        android:onClick="onClickSendEmailDomHan"
        android:text="Open Dominic Hannigan's website" />
    
    
    
    
    
    
    
    
    
    <TextView
        android:id="@+id/textviewRegDoh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380sp"
        android:textSize="20sp"
        android:text="Regina Doherty" />
    
    <EditText
        android:id="@+id/SubjectRegDoh"
        
        android:layout_width="285dip"
        
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/textviewRegDoh"
        android:hint="Please type the subject of the message"
        android:ems="10" />
    
    <ImageView
        android:id="@+id/imageViewRegDoh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390sp"
        android:layout_toRightOf="@+id/SubjectRegDoh"
        android:src="@drawable/reginadoherty" />
    
    <EditText
        android:id="@+id/messageRegDoh"
        android:layout_width="285dip"
        android:background="#32cd32"
        android:layout_height="55dip"
        android:layout_below="@+id/SubjectRegDoh"
        android:hint="Please type your message"
        android:ems="10" />
    
    <TextView
        android:id="@+id/spacer75"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/messageRegDoh" />
    
    <Button
        android:id="@+id/sendEmailRegDoh"
        android:layout_width="285dip"
        android:layout_height="wrap_content"
        android:background="#32cd32"
        android:layout_below="@+id/spacer75"
        android:onClick="onClickSendEmail1"
        android:text="Send Email" />
    
    <TextView
        android:id="@+id/spacer76"
        android:layout_width="200dip"   android:layout_height="4dip"
        android:layout_below="@+id/sendEmailRegDoh" />
    
       <Button
        android:id="@+id/RegDohwebsite"
        android:layout_width="285dip"
        android:layout_height="wrap_content"
        android:background="#32cd32"
        android:layout_below="@+id/spacer76"
        android:onClick="onClickSendEmailRegDoh"
        android:text="Open Regina Doherty's website" />

</RelativeLayout>
</ScrollView>